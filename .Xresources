! ==============================================================================
!
! ~/.Xresources 
!
! ==============================================================================

! High-DPI and other general settings ==========================================

Xft.dpi:        282
Xft.antialias:  true
Xft.hinting:    true
Xft.autohint:   false
Xft.hintstyle:  hintslight
Xft.rgba:       rgb
Xft.lcdfilter:  lcddefault
Xcursor.theme:  Breeze
Xcursor.size:   48

! Color scheme =================================================================

! Special
*.foreground:   #d2d2d2
*.background:   #222222
*.cursorColor:  #d2d2d2

! Black
*.color0:       #554444
*.color8:       #554444

! Red
*.color1:       #bd5049
*.color9:       #bd5049

! Green
*.color2:       #808d49
*.color10:      #808d49

! Yellow
*.color3:       #b98d50
*.color11:      #b98d50

! Blue
*.color4:       #506d79
*.color12:      #506d79

! Magenta
*.color5:       #79596d
*.color13:      #79506d

! Cyan
*.color6:       #6d6970
*.color14:      #6d6970

! White
*.color7:       #d9cda0
*.color15:      #d9cda0

! URxvt settings ===============================================================

URxvt.font:                       xft:hack:size=9
URxvt.depth:                      32
URxvt*scrollBar:                  false
URxvt*cursorBlink:                true
URxvt*saveLines:                  100

! Normal copy-paste keybindings
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard

! Set some word by word movement
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Control-Down:        \033[1;5B

! ==============================================================================
